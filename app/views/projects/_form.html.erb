<div id="project_form">
	<% @project = Project.new %>
	<%= simple_form_for([current_user, @project], remote: true) do |f| %>
	<div style="float:left; width:25%; height:77px; background:#F2F2F2; padding:1%">
		<div style="width:85%; float:left;">
			<%= f.text_field :name, :class => "form-control",  :placeholder => '최대 10글자' %>
		</div>
		<div style="width:10%; float:left; margin-top:4.5%; margin-left:2%; margin-bottom: 6%;">
			<%= image_submit_tag('/images/plusbtn.png', id: "project-submit-btn") %>
		</div>
		<center style="clear:both; color:gray">
			프로젝트 추가
		</center>
	</div>
	<% end %>
</div>
