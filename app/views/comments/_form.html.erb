<div id="comments_form">
	<%= simple_form_for([@post, @comment], remote: true) do |f| %>
		<%= image_tag(current_user.image_url) %>
		<div class="form-inputs">
			<%= f.input :body, label: false, placeholder: "댓글을 입력하세요"%>
		</div>
		<div class="form-actions">
			<%= f.button :submit, "작성" %>
		</div>
	<% end %>
</div>
