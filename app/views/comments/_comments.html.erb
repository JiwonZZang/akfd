<div class="comments">
	<% if current_user %>
		<div class="comment_form">
			<%= render "comments/form" %>
		</div>
	<% end %>
	<div class="comments_list">
		<%= render "comments/list" %>
	</div>
</div>

<script>
	$('#comment_body').keyup(function(e){
		if (e.keyCode == 13){
			$('#comment_body').val($('#comment_body').val().trim())
			if (!e.shiftKey) $('#comment-submit').click()
		}	
	})
</script>
