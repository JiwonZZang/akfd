<div class="modal-header">
	<div id="show-post-header">
		<span class="modal-title">링크업 유아이 수정중</span>&nbsp;
		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	</div>
</div>

<div class="modal-body">
<%= form_for @post, remote: true do |f| %>
	<%= text_field_tag :link , nil, class: 'form-control', placeholder: "링크 입력" %>	
	<%= f.hidden_field(:post_type, value:2) %>
	<%= f.submit "필드업", class:'btn btn-success', id: 'linkupbtn' %>
<% end %>

<script>
 $('#linkupbtn').click(function(){
		$('body').LoadingOverlay("show")
	})
</script>
</div>


<div class="modal-footer">
</div>
