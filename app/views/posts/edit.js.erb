	maxHeight: 200,
	toolbar:[
		['style', ['bold', 'underline', 'clear']],
		['font', ['strikethrough']],
    ['color', ['color']],
		['para', ['ul', 'ol', 'paragraph']],
    ['fontsize', ['fontsize']],
	],
	lang: 'ko-KR',
