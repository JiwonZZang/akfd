<% if @post.errors.any? %>
	var errors = []
	<% @post.errors.full_messages.each  do |e| %>
		errors.push("<%=e %>")	
	<% end %>
	alert(errors.join(','));

<% else %>

	<% if @post.post_type == 0 %>
		$('#modal_bg').click();
		hideLoadingBG()
		// 여기 나중에 쇼우로 바꾸기
		location.reload()

	<% elsif @post.post_type == 1 %>
		alert('jein')
		hideLoadingBG()
		$('#modal_board').html("")
		$('<%=j render "photoup" %>').appendTo($('#modal_board'))

		$('.modal_close').click(function(){
			$('#modal_bg').click();
		})	

		changeWidthHeightModalBoard();
	<% else %>
		<%# link up %>
	<% end %>

<% end %>
	
