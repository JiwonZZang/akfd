<%# 헤더 부분 %>
<div id="show-post-header">
	<%= @post.title %>&nbsp;
	<span style="color: darkgray; font-size:.8em">
		by&nbsp; <%= @post.user.name %>
	</span>
	<img class="modal_close" style="width:20px; height:20px;" align="right" src="/assets/xbtn.png">
	<div class='tag_list' style="font-size:0.7em; margin-top:2%;"><%= tag_icons(@post.tag_list) %> </div>
	<div style="float:right; font-size:0.6em; width:130px; ">
		<a href="#" id="expand_modal" style="float: left; color:gray">화면크기조정</a><a href="#" id="down_btn" style="float:right; color:darkgray">맨 밑으로</a>
	</div>
	<br />
	<% if @post.post_type == 1 %>
		<div style="color:darkgray; font-size:0.6em; float:right;">사진을 <span style="color:gray;">클릭</span>하면 다음 사진으로 쉽게 넘어갈 수 있습니다 <span style="color:gray">;D</span></div>
	<% end %>
</div>
