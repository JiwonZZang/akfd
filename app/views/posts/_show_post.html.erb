<div id="show-post-header">
	<%= @post.title %>
	<img class="modal_close" style="width:20px; height:20px;" align="right" src="/images/xbtn.png">
	<div class='tag_list' style="font-size:0.7em; margin-top:2%;"><%= tag_icons(@post.tag_list) %> </div>
</div>
<% @post.images.each do |image| %>
	<%= image_tag(image.url, class: 'show-post-img') %>
<% end %>
<div id="show-post-content">
	<div ><%= @post.content.html_safe %></div>
	<br>
	<% if current_user %>
		<%= link_to "좋아요", post_likes_path(@post.id), method: :post, remote: true %>
		&nbsp;
		<% if current_user.id != @post.user.id %>
			<%= link_to "필드인", post_shares_path(@post.id), method: :post, remote: true %>
		<% else %>
			<%= link_to "수정하기", edit_post_path(@post.id), remote: true %>
		<% end %>
	<% end %>
</div>
<%= render "comments/comments" %>
