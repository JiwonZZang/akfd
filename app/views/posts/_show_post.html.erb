<script>
	$('#top_btn').click(function(){	
		$('#modal_board').scrollTo("#show-post-header", {
			offset: -50	,
			duration: 200 ,
		})
	})

	$('#down_btn').click(function(){	
		$('#modal_board').scrollTo("#show-post-content", {
			offset: -50	,
			duration: 200 ,
		})
	})


	$('#expand_modal').click(function(){	
		if (!want_expand_modal)
			want_expand_modal = true
		else 
			want_expand_modal = false
		changeWidthHeightModalBoard()
	})
</script>
