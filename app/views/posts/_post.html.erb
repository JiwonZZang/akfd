<div class="posts-item">
	<span class="posts-item-writer"><img src="/images/logo.png" >아키필드<%= link_to "x", post, method: :delete, data: { confirm:	"Are you sure?" } %> </span>
	<% if post.images.size > 0 %>
    <%= link_to image_tag(post.images[0].url, class: 'posts-item-img'), post %></td>
	<% end %>
	<div class="posts-item-info">
		<span class="posts-item-title" ><%=post.title%></span><br>
		<div class="posts-item-counts">
			<span>좋아요 134</span>, <span>댓글 20</span>, <span>공유 12</span>
		</div>
		<div class="posts-item-hashtags"><span>#홍익대</span> <span>#모형</span></div>
	</div>
</div>
