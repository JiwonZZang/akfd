<% if @post.errors.any? %>
	var errors = []
	<% @post.errors.full_messages.each  do |e| %>
		errors.push("<%=e %>")	
	<% end %>
	alert(errors.join(','));
<% else %>

		$('body').LoadingOverlay("hide")
		$('#my_modal').modal('hide') // 임시로지움, 나중에 쇼우띄워줄땐 굳이 안꺼도댐

		// 여기 나중에 쇼우로 바꾸기
		location.reload()
<% end %>
	
