<nav class="navbar navbar-default navbar-fixed-top" style="padding: 2px">
	<div class="navbar-header" style="margin-left: 2%">
		<%= link_to image_tag('/images/logo.png', id: "brand-image"), posts_path , class: "navbar-brand", id: 'navbar-brand-link'%>
	</div>

	<form class="navbar-form" onsubmit="return false;"style="width:450px" role="search">
		<div class="form-group" style="width:350px">
			<input id="nav_search_input" type="text" class="form-control" style="width:350px; background-color:rgba(104,104,104,0.3)" placeholder="태그 검색" />
		</div>
		<a id="nav_search_submit" href='#'>
			<button type="button" class="btn btn-primary" style="background:#333333; border-color:#333333">
					<span style="color:#CBFD34" class="fa fa-search" aria-hidden="true"></span>
			</button>
		</a>
	</form>
	<script>
		$(function(){
			$('#nav_search_submit').click(function(){
				// 일단 #제거, 태그엔 특수문자 허용하지 말까?
				$('#nav_search_submit').attr('href', '/posts?tag=' + $("#nav_search_input").val())
			})	

			$('#nav_search_input').keyup(function(e){
				if (e.keyCode == 13){
					window.location = '/posts?tag=' + $("#nav_search_input").val();
				}	
			})
		})
	</script>

	<% if current_user %>
	<div id="navbar" class="navbar-right" style="margin-right: 1%">
		<img id="profile_img" class="nav-icon-nohover" src="<%= current_user.image_url%>" style="border-radius:3px">

		<%= link_to image_tag('/images/home.png', class: "nav-icon"), posts_path  %>
		<a href="/my_feeld">
			<img class="nav-icon icon-hover" src="/images/my.png">
		</a>

		<a href="#message">
			<img id="msg_icon" class="nav-icon" src="/images/msg.png">
		</a>

		<a href="#setting"><img class="nav-icon" src="/images/setting.png"></a>

		<%= link_to image_tag('/images/logout.png', class: "nav-icon-nohover"), logout_path, method: :delete  %>

	</div><!--/.nav-collapse -->
	<% else %>
	<div id="navbar" class="navbar-right" style="margin-right: 1%">
		 <a href="/login">
		 	<%= image_tag "/images/navlogin.png", class: 'nav-icon-nohover'%>
		</a>
		<a href="/register">
		 	<%= image_tag "/images/navregister.png", class: 'nav-icon-nohover' %>
		</a>
	</div>
	<% end %>
</nav>
